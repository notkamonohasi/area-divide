{
    "terminal.integrated.env.linux": {
      "PYTHONPATH": "${workspaceFolder}:${env:PYTHONPATH}"
    },
    "terminal.integrated.env.windows": {
      "PYTHONPATH": "${workspaceFolder};${env:PYTHONPATH}"
    },
    "terminal.integrated.env.osx": {
      "PYTHONPATH": "${workspaceFolder}:${env:PYTHONPATH}"
    },
    "mypy-type-checker.interpreter": ["${workspaceFolder}/.venv/bin/python"],
    "mypy-type-checker.path": ["${workspaceFolder}/.venv/bin/mypy"],
    "black-formatter.interpreter": ["${workspaceFolder}/.venv/bin/python"],
    "black-formatter.path": ["${workspaceFolder}/.venv/bin/black"],
    "isort.interpreter": ["${workspaceFolder}/.venv/bin/python"],
    "isort.path": ["${workspaceFolder}/.venv/bin/isort"],
    "editor.formatOnSave": true,
    "black-formatter.args": ["--line-length=88"],
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    },
    "python.testing.unittestArgs": [
      "-v",
      "-s",
      "./ChargeOptCore/Tests",
      "-p",
      "test_*.py"
    ],
    "python.testing.pytestEnabled": false,
    "python.testing.unittestEnabled": true,
    "git.ignoreLimitWarning": true,
    "[javascript]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[typescript]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[json]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[csv]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[markdown]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[python]": {
      "editor.defaultFormatter": "ms-python.black-formatter"
    },
    "clang-format.executable": "/opt/homebrew/bin/clang-format",
  }
  